{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,

        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],

        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "./dist"
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
