{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "preserve",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "types": ["node", "jest", "vite/client"],
        "baseUrl": ".",
        "declaration": true,
        "declarationDir": "./dist",

        "paths": {
            "~/*": ["src/*"]
        }
    },
    "include": ["src/index.ts"],
    "exclude": ["node_modules", "dist"]
}
